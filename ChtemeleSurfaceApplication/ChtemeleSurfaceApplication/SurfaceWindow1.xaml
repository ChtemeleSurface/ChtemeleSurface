<s:SurfaceWindow x:Class="ChtemeleSurfaceApplication.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    xmlns:custom="clr-namespace:ChtemeleSurfaceApplication"
    Title="ChtemeleSurfaceApplication" Height="1080" Width="1920">

    <s:ScatterView Name="MainScatterView" SizeChanged="MainScatterView_SizeChanged">
             
        <s:ScatterViewItem Name="PlayerSScatterView"
                           Orientation="0"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteSud"  CanScale="False" Orientation="0"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocSud" CanScale="False" Orientation="0"></s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierSud" CanScale="False" Orientation="0"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerOScatterView"
                           Orientation="90"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteOuest"  CanScale="False" Orientation="0"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocOuest" CanScale="False" Orientation="0"></s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierOuest" CanScale="False" Orientation="0"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerNScatterView"
                           Orientation="180"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteNord" CanScale="False" Orientation="0"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocNord"  CanScale="False" Orientation="0"></s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierNord"  CanScale="False" Orientation="0"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerEScatterView"
                           Orientation="270"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteEst" CanScale="False" Orientation="0"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocEst"  CanScale="False" Orientation="0"></s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierEst"  CanScale="False" Orientation="0"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="CenterView"
                           Orientation="0"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="100"
                           Height="100"
                           Background="AntiqueWhite"
                           >
            <s:ScatterView Name="ScatterCenterView">
                <custom:PageCode x:Name="PageCode" CanScale="False" CanMove="False" CanRotate="False" Orientation="0"></custom:PageCode>
                <s:ScatterViewItem x:Name="ZonePioche" CanScale="False" CanMove="False" CanRotate="False" Orientation="0"></s:ScatterViewItem>
                <custom:RenduHTML x:Name="PageRendu" CanScale="False" CanMove="False" CanRotate="False" Orientation="0"></custom:RenduHTML>
            </s:ScatterView>
        </s:ScatterViewItem>

    </s:ScatterView>
      
</s:SurfaceWindow>
