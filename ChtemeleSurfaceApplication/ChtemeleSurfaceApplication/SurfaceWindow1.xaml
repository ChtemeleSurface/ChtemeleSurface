<s:SurfaceWindow x:Class="ChtemeleSurfaceApplication.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    xmlns:custom="clr-namespace:ChtemeleSurfaceApplication"
    Title="ChtemeleSurfaceApplication" Height="1080" Width="1920">

    <s:ScatterView Name="MainScatterView" SizeChanged="MainScatterView_SizeChanged">
             
        <s:ScatterViewItem Name="PlayerSScatterView"
                           Orientation="0"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteSud"  CanScale="False" CanRotate="False" Orientation="0"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocSud" CanScale="False" CanRotate="False" Orientation="0">
                    <s:ElementMenu ActivationMode="AlwaysActive" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <s:ElementMenuItem Header="Balises">
                            <s:ElementMenuItem Header="Balises Ouvrantes">
                                <s:ElementMenuItem Header="Texte">
                                    <s:ElementMenuItem Header="h1"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="h2"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="p"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="strong"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="em"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="a"></s:ElementMenuItem>
                                </s:ElementMenuItem>
                                <s:ElementMenuItem Header="Structure">
                                    <s:ElementMenuItem Header="div"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="blockquote"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="header"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="footer"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="aside"></s:ElementMenuItem>
                                </s:ElementMenuItem>
                            </s:ElementMenuItem>
                            <s:ElementMenuItem Header="Balises Fermantes">
                                <s:ElementMenuItem Header="Texte">
                                    <s:ElementMenuItem Header="/h1"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="/h2"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="/p"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="/strong"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="/em"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="/a"></s:ElementMenuItem>
                                </s:ElementMenuItem>
                                <s:ElementMenuItem Header="Structure">
                                    <s:ElementMenuItem Header="/div"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="/blockquote"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="/header"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="/footer"></s:ElementMenuItem>
                                    <s:ElementMenuItem Header="/aside"></s:ElementMenuItem>
                                </s:ElementMenuItem>
                            </s:ElementMenuItem>
                            <s:ElementMenuItem Header="Balises simples">
                                <s:ElementMenuItem Header="hr/"></s:ElementMenuItem>
                                <s:ElementMenuItem Header="br/"></s:ElementMenuItem>
                                <s:ElementMenuItem Header="img/"></s:ElementMenuItem>
                            </s:ElementMenuItem>
                        </s:ElementMenuItem>
                        <s:ElementMenuItem Header="Attributs">
                            <s:ElementMenuItem Header="a">
                                <s:ElementMenuItem Header="Href"></s:ElementMenuItem>
                            </s:ElementMenuItem>
                            <s:ElementMenuItem Header="img">
                                <s:ElementMenuItem Header="Src"></s:ElementMenuItem>
                                <s:ElementMenuItem Header="alt"></s:ElementMenuItem>
                            </s:ElementMenuItem>
                        </s:ElementMenuItem>
                        <s:ElementMenuItem Header="Add-ons">
                            <s:ElementMenuItem Header="Ctrl+F5"></s:ElementMenuItem>
                            <s:ElementMenuItem Header="Browser Update"></s:ElementMenuItem>
                            <s:ElementMenuItem Header="Antivirus"></s:ElementMenuItem>
                            <s:ElementMenuItem Header="Code Inspector"></s:ElementMenuItem>
                            <s:ElementMenuItem Header="Café"></s:ElementMenuItem>
                        </s:ElementMenuItem>
                        <s:ElementMenuItem Header="Attaques">
                            <s:ElementMenuItem Header="Freeze"></s:ElementMenuItem>
                            <s:ElementMenuItem Header="Crash Browser"></s:ElementMenuItem>
                            <s:ElementMenuItem Header="Man in the Middle"></s:ElementMenuItem>
                            <s:ElementMenuItem Header="303 SeeOther"></s:ElementMenuItem>
                            <s:ElementMenuItem Header="403 Forbidden"></s:ElementMenuItem>
                            <s:ElementMenuItem Header="404 Not Found"></s:ElementMenuItem>
                        </s:ElementMenuItem>
                    </s:ElementMenu>
                </s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierSud" CanScale="False" CanRotate="True" Orientation="0"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerOScatterView"
                           Orientation="90"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteOuest"  CanScale="False" CanRotate="False" Orientation="0"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocOuest" CanScale="False" CanRotate="False" Orientation="0"></s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierOuest" CanScale="False" Orientation="0"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerNScatterView"
                           Orientation="180"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteNord" CanScale="False" CanRotate="False" Orientation="0"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocNord"  CanScale="False" CanRotate="False" Orientation="0"></s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierNord"  CanScale="False" Orientation="0"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerEScatterView"
                           Orientation="270"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteEst" CanScale="False" CanRotate="False" Orientation="0"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocEst"  CanScale="False" CanRotate="False" Orientation="0"></s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierEst"  CanScale="False" Orientation="0"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="CenterView"
                           Orientation="0"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="100"
                           Height="100"
                           Background="AntiqueWhite"
                           >
            <s:ScatterView Name="ScatterCenterView">
                <custom:PageCode x:Name="PageCode" CanScale="False" CanMove="False" CanRotate="False" Orientation="0"></custom:PageCode>
                <s:ScatterViewItem x:Name="ZonePioche" CanScale="False" CanMove="False" CanRotate="False" Orientation="0"></s:ScatterViewItem>
                <custom:RenduHTML x:Name="PageRendu" CanScale="False" CanMove="False" CanRotate="False" Orientation="0"></custom:RenduHTML>
            </s:ScatterView>
        </s:ScatterViewItem>

    </s:ScatterView>
      
</s:SurfaceWindow>
