<s:SurfaceWindow x:Class="ChtemeleSurfaceApplication.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    xmlns:custom="clr-namespace:ChtemeleSurfaceApplication"
    Title="ChtemeleSurfaceApplication" Height="1080" Width="1920">

    <s:ScatterView Name="MainScatterView" SizeChanged="MainScatterView_SizeChanged">

        <s:ScatterViewItem Name="PlayerSScatterView"
                           Orientation="0"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteSud"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocSud"></s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierSud"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerOScatterView"
                           Orientation="90"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteOuest"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocOuest"></s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierOuest"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerNScatterView"
                           Orientation="180"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteNord"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocNord"></s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierNord"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerEScatterView"
                           Orientation="270"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView>
                <custom:CartesJoueurs x:Name="CarteEst"></custom:CartesJoueurs>
                <s:ScatterViewItem Name="DocEst"></s:ScatterViewItem>
                <s:ScatterViewItem Name="ClavierEst"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="CenterView"
                           Orientation="0"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="100"
                           Height="100"
                           Background="AntiqueWhite"
                           >
            CenterView
        </s:ScatterViewItem>

    </s:ScatterView>
      
</s:SurfaceWindow>
