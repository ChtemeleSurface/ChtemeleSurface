<s:SurfaceWindow x:Class="ChtemeleSurfaceApplication.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="ChtemeleSurfaceApplication" Height="1080" Width="1920">

    <s:ScatterView Name="MainScatterView" SizeChanged="MainScatterView_SizeChanged">

        <s:ScatterViewItem Name="PlayerSScatterView"
                           Orientation="0"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView Name="scatterSud">
                <s:ScatterViewItem Name="CarteSud"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerOScatterView"
                           Orientation="90"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView Name="scatterOuest">
                <s:ScatterViewItem Name="CarteOuest"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerNScatterView"
                           Orientation="180"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView Name="scatterNord">
                <s:ScatterViewItem Name="CarteNord"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="PlayerEScatterView"
                           Orientation="270"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="700"
                           Height="150"
                           >
            <s:ScatterView Name="scatterEst">
                <s:ScatterViewItem Name="CarteEst"></s:ScatterViewItem>
            </s:ScatterView>
        </s:ScatterViewItem>

        <s:ScatterViewItem Name="CenterView"
                           Orientation="0"
                           CanMove="False"
                           CanRotate="False"
                           CanScale="False"
                           Width="100"
                           Height="100"
                           Background="AntiqueWhite"
                           >
            CenterView
        </s:ScatterViewItem>

    </s:ScatterView>
      
</s:SurfaceWindow>
